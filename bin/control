#!/bin/bash -e

PATH=/bin/:/usr/bin:$PATH

#source $OPENSHIFT_CARTRIDGE_SDK_BASH

function start {
    export PYTHONPATH=$OPENSHIFT_REPO_DIR/.openshift:$OPENSHIFT_REPO_DIR/wsgi:$OPENSHIFT_REPO_DIR:$PYTHONPATH
    echo "`echo $OPENSHIFT_CELERY_DIR`usr/celery worker start --pidfile=`echo $OPENSHIFT_CELERY_DIR`etc/celeryd.pid --loglevel=DEBUG --logfile=`echo $OPENSHIFT_TMP_DIR`celery_log.txt" >> `echo $OPENSHIFT_TMP_DIR`blarg.txt
}

function stop {
    if ps -p `cat etc/celeryd.pid` > /dev/null; 
    then
        kill `cat etc/celeryd.pid`
    else
        echo "nothing to kill"
    fi
    echo "stopped"
}

function restart {
    echo "restarted"
}

function catchall {
    echo "not yet implemented"
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      catchall ;;
  tidy)        catchall ;;
  pre-build)   catchall ;;
  build)       catchall ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0
